// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DiningHall {
  id             Int     @id @default(autoincrement())
  name           String
  wdbreakfast    String?
  wdlunch        String?
  wddinner       String?
  wesatbreakfast String?
  wesunbreakfast String?
  webrunch       String?
  wedinner       String?
  latenight      String?
  haslatenight   Boolean
  hasgrabngo     Boolean
}

model MenuItem {
  id      Int
  name    String
  meal    String
  hallid  Int
  date    DateTime
  station String

  @@id([id, name, meal, hallid, date])
}

model MenuItemInfo {
  name              String   @id
  vegan             Boolean?
  vegetarian        Boolean?
  glutenfriendly    Boolean?
  smartcheck        Boolean?
  lesssodium        Boolean?
  nogarliconion     Boolean?
  containsnuts      Boolean?
  servingsize       String?
  calories          Int?
  totalfat          String?
  saturatedfat      String?
  transfat          String?
  cholesterol       String?
  sodium            String?
  calcium           String?
  iron              String?
  totalcarbohydrate String?
  dietaryfiber      String?
  totalsugars       String?
  addedsugars       String?
  protein           String?
  vitamind          String?
  potassium         String?
  allergens         String?
}
